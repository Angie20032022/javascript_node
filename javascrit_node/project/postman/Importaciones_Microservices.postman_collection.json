{
  "info": {
    "name": "Sistema de Importaciones - Microservicios",
    "description": "Colección completa de endpoints para el sistema de importaciones",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "auth_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Gateway Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/health"
          }
        },
        {
          "name": "API Documentation",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/"
          }
        }
      ]
    },
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registrar Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    console.log('Usuario registrado exitosamente');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": "{{base_url}}/api/users/register"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.token);",
                  "    console.log('Token guardado:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@imports.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": "{{base_url}}/api/users/login"
          }
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar Productos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products",
              "host": ["{{base_url}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "category",
                  "value": "Electronics",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "smartphone",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Obtener Producto",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/products/1"
          }
        },
        {
          "name": "Crear Producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nuevo Producto\",\n  \"description\": \"Descripción del producto\",\n  \"price\": 199.99,\n  \"category\": \"Electronics\",\n  \"supplier_id\": 1,\n  \"stock\": 20,\n  \"hs_code\": \"8471.30.01\",\n  \"weight\": 1.5\n}"
            },
            "url": "{{base_url}}/api/products"
          }
        }
      ]
    },
    {
      "name": "Proveedores",
      "item": [
        {
          "name": "Listar Proveedores",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/suppliers"
          }
        },
        {
          "name": "Crear Proveedor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nuevo Proveedor\",\n  \"country\": \"México\",\n  \"contact_email\": \"contacto@proveedor.com\",\n  \"phone\": \"+52-55-1234-5678\",\n  \"address\": \"Ciudad de México, México\"\n}"
            },
            "url": "{{base_url}}/api/suppliers"
          }
        }
      ]
    },
    {
      "name": "Importaciones",
      "item": [
        {
          "name": "Listar Importaciones",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/imports",
              "host": ["{{base_url}}"],
              "path": ["api", "imports"],
              "query": [
                {
                  "key": "status",
                  "value": "pending",
                  "disabled": true
                },
                {
                  "key": "supplier_id",
                  "value": "1",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Crear Importación",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supplier_id\": 1,\n  \"import_date\": \"2025-01-15\",\n  \"estimated_arrival\": \"2025-02-15\",\n  \"notes\": \"Importación de productos electrónicos\",\n  \"items\": [\n    {\n      \"product_id\": 1,\n      \"quantity\": 10,\n      \"unit_price\": 299.99\n    },\n    {\n      \"product_id\": 3,\n      \"quantity\": 5,\n      \"unit_price\": 199.99\n    }\n  ]\n}"
            },
            "url": "{{base_url}}/api/imports"
          }
        },
        {
          "name": "Obtener Importación",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/imports/1"
          }
        },
        {
          "name": "Actualizar Estado (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"shipped\",\n  \"tracking_number\": \"TRK123456789\"\n}"
            },
            "url": "{{base_url}}/api/imports/1/status"
          }
        },
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/imports/stats/dashboard"
          }
        }
      ]
    }
  ]
}